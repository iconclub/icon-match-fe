{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss",
    "stylelint-config-recommended-scss"
  ],
  "files": ["**/*.scss"],
  "plugins": ["stylelint-prettier", "stylelint-scss"],
  "rules": {
    "prettier/prettier": [
      true,
      {
        "singleQuote": false,
        "endOfLine": "auto"
      }
    ],
    "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$"
  },
  "ignoreFiles": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*",
    "coverage/**/*",
    "docs/**/*",
    "test/**/*",
    "src/styles/**/*"
  ]
}
